@model GenreDTO
<div class="text-center">
    <div class="display-6">Tür Güncelleme</div>
</div>
<form method="post" asp-action="UpdateGenre" enctype="multipart/form-data">

    <input type="hidden" asp-for="GenreId" />
    <div class="form-group my-3">
        Tür
        <input asp-for="MovieGenre" class="form-control" />
    </div>
    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-save"></i>
                Güncelle
            </button>
        </div>
    </div>
</form>