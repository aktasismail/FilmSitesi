@model IEnumerable<GenreDTO>
@{
    ViewData["Title"] = "Index";
}

<div class="text-center my-5 border-bottom">
    <div class="display-6">Türler</div>
</div>

<div class="text-center">
    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="CreateGenre">
            <i class="bi bi-file-earmark-plus"></i>
            Oluştur
        </a>
    </div>
</div>
<div class="row">
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Tür</th>
                <th>Silme</th>
                <th>Güncelleme</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var genre in Model)
            {
                <tr>
                    <td>@genre.MovieGenre</td>
                    <td>
                        <a title="Sil" class="btn btn-danger"
                           asp-action="DeleteGenre" asp-route-id="@genre.GenreId">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                    <td>
                        <a title="Düzenle" class="btn btn-warning"
                           asp-action="UpdateGenre" asp-route-id="@genre.GenreId">
                            <i class="bi bi-pencil"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

