    <div class="row">
        <div class="col-md-8">
            <div class="filmizle responsive-iframe">
                <iframe width="853" height="480" src="@Model.movietDto.MovieSource" title="@Model.movietDto.Moviename" frameborder="2" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
            </div>
            <div class="detaylar">
                <h4>@Model.movietDto.Moviename</h4>
                <hr>
                <p>@Model.movietDto.MovieDetail</p>
            </div>
