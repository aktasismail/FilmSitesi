        </div>
        <div class="col-md-3 ">
            <div class="card mb-4 bg-black mt-5">
                <div class="card-header">
                    <img class="img-fluid" src="@Model.movietDto.ImageUrl" />
                </div>
                <div class="card-body   ">
                    <h1 class="card-title " />
                    <ul class="list-group h6 mt-3 mb-4">
                        <li>Yönetmen : @Model.movietDto.Director</li>
                        <li>Imdb puanı :@Model.movietDto.ImdbRate</li>
                        <li>Uzunluk: @Model.movietDto.Duration</li>
                        <li>Çıkış tarihi: @Model.movietDto.Year</li>
                        <li>Oyuncular : @Model.movietDto.Cast</li>
                    </ul>

                </div>
            </div>
@*             @await Component.InvokeAsync("MovieDetail")*@
        </div>
        <form asp-controller="Home" asp-action="AddComment" method="post">
            <div class="ia_comment">
                <input hidden name="id" value="@Model.movietDto.Id" />
                <input class="ia_input_comment" name="name" placeholder="Kullanıcı Adı" />
                <textarea class="ia_textarea" name="text" placeholder="Yorumunuz"></textarea>
                <button type="submit" class="ia_button_comment"><img height="26px" src="~/image/send.svg" /></button>

            </div>
        </form>
    </div>
</div>



